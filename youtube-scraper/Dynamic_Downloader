
from pytubefix import YouTube
from pytubefix.cli import on_progress

def smallDownload():
  url = input("Enter the URL :\n")

  yt = YouTube(url, on_progress_callback = on_progress)
  print(yt.title)

  ys = yt.streams.get_audio_only()
  new_var = ys.download(mp3= True )



