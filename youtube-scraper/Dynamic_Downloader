def main():
  print("Welcome To Youtube Scrapper")
  inp
  while inp !='X':
    inp = input("enter 'M' for Multiple file 'S' for single file:\n").upper()
    if inp == 'M':
      MultiDownload()
    if inp == 'S':
      smallDownload()

